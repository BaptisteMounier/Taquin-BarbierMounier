<?xml version="1.0" encoding="UTF-8"?>
<project name="Taquin-BarbierMounier" default=""
	basedir=".">
	<property name="version" value="V1" />

	<target name="run">
		<java jar="dist/Taquin${version}.jar" fork="true" />
	</target>

	<target name="compile">
		<mkdir dir="bin" />
		<javac srcdir="src" destdir="bin" includeantruntime="false" />
		<echo message="Compilation du projet dans le dossier bin terminee" />
	</target>

	<target name="jar" depends="compile">
		<jar destfile="dist/Taquin${version}.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="Main" />
			</manifest>
		</jar>
		<echo message="Creation du fichier Jar dans le dossier dist terminee" />
	</target>

	<target name="clean" depends="jar">
		<delete dir="bin" />
		<echo message="Suppression du dossier bin terminee" />
	</target>
	
	<target name="build_run" depends="jar,run"/>

</project>